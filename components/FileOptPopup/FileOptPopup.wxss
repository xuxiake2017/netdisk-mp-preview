
.home_opt-popup {
  width: 100%;
  height: 100%;
}
.home_opt-popup-title {
  box-sizing: content-box;
  height: 90rpx;
  width: calc(100% - 100rpx);
  display: flex;
  padding: 20rpx 50rpx;
  border-bottom: 1px solid #f2f2f2;
}
.home_opt-popup-title-file-icon {
  height: 100%;
  flex: 1;
  display: flex;
  align-items: center;
}
.home_opt-popup-title-file-name {
  height: 100%;
  flex: 6;
  display: flex;
  align-items: center;
  color: #999999;
  font-weight: 600;
}
.home_opt-popup-content {
  padding: 0 50rpx;
}
.home_opt-popup-content .home_opt-popup-opt-item-wrap {
  padding-left: unset;
  padding-right: unset;
}
.home_opt-popup-content .home_opt-popup-opt-item-wrap::after {
  border-bottom: unset;
}
.home_opt-popup-opt-item {
  height: 90rpx;
  display: flex;
}
.home_opt-popup-opt-item .iconfont {
  color: #212121;
  /* font-weight: 600; */
}
.home_opt-popup-opt-item-icon {
  height: 100%;
  flex: 1;
  display: flex;
  align-items: center;
}
.home_opt-popup-opt-item-title {
  height: 100%;
  flex: 6;
  display: flex;
  align-items: center;
}
.home_opt-popup-cancel-wrap {
  height: 130rpx;
  color: #212121;
  line-height: 130rpx;
  text-align: center;
  background: #f9f9f9;
  font-weight: 600;
}