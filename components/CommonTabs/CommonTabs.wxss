.tabs-wrap {
  height: 90rpx;
  background: #FFF;
  color: #666;
  position: relative;
}
.tabs {
  position: fixed;
  top: 0;
  left: 0;
  height: 90rpx;
  width: 100%;
  background: #FFF;
  color: #666;
  z-index: 9;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, .1);
}
.tabs__line {
  height: 2px;
  position: absolute;
  bottom: 5px;
  background: var(--primary-color);
  transition: all ease-in-out .35s;
}
.tab-item {
  height: 100%;
  line-height:  90rpx;
  text-align: center;
  position: relative;
  font-weight: 700;
  color: #303133;
}
.tab-item--selected {
  color: var(--primary-color);
}

.gallery-opt-header {
  position: fixed;
  top: -90rpx;
  left: 0;
  height: 90rpx;
  width: 100%;
  background: #FFF;
  z-index: 10;
  font-size: 30rpx;
  font-weight: 600;
  color: #303133;
  padding: 0 30rpx;
  transition: all ease-in-out .35s;
}
.gallery-opt-header .icon-quanxuan {
  color: #303133
}